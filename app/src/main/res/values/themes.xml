<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ECommerce" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/aqua_blue</item>
        <item name="colorPrimaryDark">@color/pacific_blue</item>
    </style>
    
    <style name="CustomButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="AuthCustomLoginButton">
        <item name="android:background">@drawable/auth_white_btn</item>
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/aqua_blue</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="AuthCustomSignUpButton">
        <item name="android:background">@drawable/auth_signup_btn</item>
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>